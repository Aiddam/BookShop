@{
    ViewData["Title"] = "Home Page";
}
<head >
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/BooksShop.styles.css" asp-append-version="true" />
    <style>
         html { overflow:  hidden; }
         .button {
  border: none;
  color: #FFFFFF;
  text-align: center;
  font-size: 28px;
  padding: 20px;
  width: 300px;
  transition: all 0.5s;
  cursor: pointer;
  margin: 5px;
}

.button span {
  cursor: pointer;
  display: inline-block;
  position: relative;
  transition: 0.5s;
}

.button span:after {
  content: '\00bb';
  position: absolute;
  opacity: 0;
  top: 0;
  right: -20px;
  transition: 0.7s;
}

.button:hover span {
  padding-right: 35px;
}

.button:hover span:after {
  opacity: 1;
  right: 0;
}
    </style>
</head>

<div class="row" >
  <div class="col-md-8" style="margin-left:-50px; ">
      <br/>
      <br/>
      
      <h1 style="font-size:52px">
            <strong>BookShop</strong>
       </h1>
       <br/>
       <p  style="color:#e8e0dc; font-size:14px; ">
           But eyes are blind!
           <p style="color:#e8e0dc; font-size:14px; margin-top:-15px;">
               You have to look with heart...
       </p>
       <div style="padding:100px"> 
           <img style='width:340px; height:280px; display:block;margin-left:-160px' src="~/image/ukraine_stand_PNG13.png"/>
       </div>
  </div>
  @if(!User.Identity.IsAuthenticated)
  {
      <div class="col-md-4 form-g form-group" style="padding-top:80px">
          <a asp-controller="Account" asp-action="Register">
    <button class="button" style="background:#a94b19; border-radius:12px"  >
        <span>
        Register

    </button>
    </a>

     <a asp-controller="Account" asp-action="Login">
    <button class="button" style="background:#a94b19; border-radius:12px" >
        <span>
        Login
        </span>
    </button>
    </a>
</div>
  }


 
</div>

